<Window x:Class="FlyffUAutoFSPro.FSBotWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        xmlns:p = "clr-namespace:FlyffUAutoFSPro.Properties"
        xmlns:uitools="clr-namespace:FlyffUAutoFSPro._Script.UI"
        xmlns:svgc="http://sharpvectors.codeplex.com/svgc/"
        xmlns:fa="http://schemas.fontawesome.io/icons/" 
        xmlns:appviews="clr-namespace:FlyffUAutoFSPro.AppViews"
        xmlns:sys="clr-namespace:System;assembly=mscorlib" xmlns:_script="clr-namespace:FlyffUAutoFSPro._Script"
        SizeToContent="Height" Width="1423" FontFamily="Segoe UI Historic" Icon="../Resources/icon.ico" Height="1611">

    <Grid>

        <Grid x:Name="LoadingOverview" Visibility="Collapsed" Panel.ZIndex="100"  Background="#CC191919">
            <StackPanel Orientation="Vertical" HorizontalAlignment="Center" VerticalAlignment="Center">
                <DockPanel>
                    <fa:ImageAwesome Icon="CircleOutlineNotch" Spin="True" Width="40" SpinDuration="1" Foreground="White" />
                </DockPanel>
                <Separator Opacity="0" Height="2"/>
                <DockPanel>
                    <TextBlock x:Name="LoadingOverviewText" Foreground="White" ></TextBlock>
                </DockPanel>
            </StackPanel>
        </Grid>


        <Grid HorizontalAlignment="Stretch">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="270" />
            </Grid.ColumnDefinitions>

            <Grid HorizontalAlignment="Stretch" Grid.Row="0" Grid.Column="0" x:Name="GameViewBrowser">
                <DockPanel Panel.ZIndex="1000">
                    <StackPanel x:Name="SnackBarView">
                    </StackPanel>
                </DockPanel>
            </Grid>

            <Grid Grid.Row="0" Grid.Column="1" x:Name="GameControllView" Background="#FFE8E8E8" HorizontalAlignment="Right">

                <TabControl Height="auto" TabStripPlacement="Left">

                    <TabControl.Resources>
                        <Style TargetType="{x:Type TabItem}">
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="TabItem">
                                        <Border Name="Border" BorderThickness="1,1,0,1" Background="Transparent" BorderBrush="#FF989797" Margin="0 2 0 0">
                                            <ContentPresenter x:Name="ContentSite"
                                        VerticalAlignment="Center"
                                        HorizontalAlignment="Center"
                                        ContentSource="Header"
                                        Margin="6 10 6 10"/>
                                        </Border>
                                        <ControlTemplate.Triggers>
                                            <Trigger Property="IsSelected" Value="True">
                                                <Setter TargetName="Border" Property="Background" Value="#FFC5C5C5" />
                                            </Trigger>
                                        </ControlTemplate.Triggers>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                            <Setter Property="HeaderTemplate">
                                <Setter.Value>
                                    <DataTemplate>
                                        <ContentPresenter Content="{TemplateBinding Content}">
                                            <ContentPresenter.LayoutTransform>
                                                <RotateTransform Angle="-90"/>
                                            </ContentPresenter.LayoutTransform>
                                        </ContentPresenter>
                                    </DataTemplate>
                                </Setter.Value>

                            </Setter>
                        </Style>
                    </TabControl.Resources>


                    <TabItem Header="{x:Static p:Resources.bot}" MinHeight="80">

                        <Grid Background="#FFE5E5E5">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>

                            <Grid.RowDefinitions>
                                <RowDefinition Height="428*"/>
                                <RowDefinition Height="981*"/>
                                <RowDefinition Height="180"/>
                            </Grid.RowDefinitions>

                            <ScrollViewer Grid.Row="0" Grid.Column="0" VerticalAlignment="Top" VerticalScrollBarVisibility="Auto" Margin="0,0,3,0" Grid.RowSpan="2">
                                <ScrollViewer.Resources>
                                    <sys:Double x:Key="{x:Static SystemParameters.VerticalScrollBarWidthKey}">5</sys:Double>
                                </ScrollViewer.Resources>
                                <StackPanel >
                                    <GroupBox Header="{x:Static p:Resources.mystatus}" Width="230">

                                        <StackPanel>
                                            <Separator Opacity="0" Height="1"/>

                                            <DockPanel>
                                                <StackPanel Orientation="Horizontal">
                                                    <Label Content="HP:" Width="34" Height="15" Padding="0" FontSize="10" VerticalContentAlignment="Center" />
                                                    <Grid Width="165" Height="15">
                                                        <ProgressBar Name="SelfHPProgressBar" Value="0" SmallChange="1" Foreground="#FFCC1E46" Background="#FF131313" BorderBrush="Black" />
                                                        <TextBlock Text="{Binding ElementName=SelfHPProgressBar, Path=Value, StringFormat={}{0:0}%}" HorizontalAlignment="Center" VerticalAlignment="Center" Foreground="White" />
                                                    </Grid>
                                                </StackPanel>
                                            </DockPanel>

                                            <Separator Opacity="0" Height="1"/>

                                            <DockPanel>
                                                <StackPanel Orientation="Horizontal">
                                                    <Label Content="MP:" Width="34" Height="15" Padding="0" FontSize="10" VerticalContentAlignment="Center" />
                                                    <Grid Width="165" Height="15">
                                                        <ProgressBar Name="SelfMPProgressBar" Value="0" SmallChange="1" Foreground="#FF2686D9" Background="#FF131313" BorderBrush="Black" />
                                                        <TextBlock Text="{Binding ElementName=SelfMPProgressBar, Path=Value, StringFormat={}{0:0}%}" HorizontalAlignment="Center" VerticalAlignment="Center" Foreground="White" />
                                                    </Grid>
                                                </StackPanel>
                                            </DockPanel>

                                            <Separator Opacity="0" Height="1"/>

                                            <Label Content="{x:Static p:Resources.settings}" Height="14" VerticalContentAlignment="Center" Padding="0" FontSize="10" FontWeight="Normal" />

                                            <Separator Opacity="0" Height="1"/>
                                            <Separator Opacity="0.2" Height="1"/>
                                            <Separator Opacity="0" Height="1"/>

                                            <DockPanel>
                                                <Grid>
                                                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Left">
                                                        <Label Content="{x:Static p:Resources.hppotion}" HorizontalAlignment="Center" VerticalAlignment="Top" Width="69" Height="22" Padding="0" FontSize="10" VerticalContentAlignment="Center" />
                                                        <Button ToolTip="" x:Name="HpPotActionButton" HorizontalAlignment="Left" Width="130" />
                                                    </StackPanel>
                                                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                                                        <svgc:SvgViewbox Source="/Resources/Questionmark.svg" uitools:ToolTip.ToolTipHeader="{x:Static p:Resources.hppotion}" uitools:ToolTip.ToolTipText="{x:Static p:Resources.hppotion_tooltip}" MouseDown="ShowMessageBox" Height="10" HorizontalAlignment="Right" VerticalAlignment="Center" Margin="0,0,5,0"/>
                                                    </StackPanel>
                                                </Grid>
                                            </DockPanel>
                                            <DockPanel x:Name="UseHPPotionView">
                                                <Grid>
                                                    <StackPanel>
                                                        <Label Content="{x:Static p:Resources.usehppotion}" Height="14" VerticalContentAlignment="Center" Padding="0" FontSize="10"/>
                                                        <Grid>
                                                            <StackPanel Orientation="Horizontal" HorizontalAlignment="Left">
                                                                <ComboBox x:Name="UseHPPotionValueSelection" VerticalAlignment="Center" Width="199" />
                                                            </StackPanel>
                                                            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                                                                <svgc:SvgViewbox Source="/Resources/Questionmark.svg" uitools:ToolTip.ToolTipHeader="{x:Static p:Resources.hppotion}" uitools:ToolTip.ToolTipText="{x:Static p:Resources.usehppotion_tooltip}" MouseDown="ShowMessageBox" Height="10" HorizontalAlignment="Right" VerticalAlignment="Center" Margin="0,0,5,0"/>
                                                            </StackPanel>
                                                        </Grid>
                                                    </StackPanel>
                                                </Grid>
                                            </DockPanel>
                                            <Separator Opacity="0" Height="1"/>
                                            <DockPanel>
                                                <Grid>
                                                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Left">
                                                        <CheckBox x:Name="SelfHealProtectionCheckbox" Content="{x:Static p:Resources.selfhealprotection}" HorizontalAlignment="Left" VerticalAlignment="Center" Width="150"/>
                                                    </StackPanel>
                                                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                                                        <svgc:SvgViewbox Source="/Resources/Questionmark.svg" uitools:ToolTip.ToolTipHeader="{x:Static p:Resources.selfhealprotection}" uitools:ToolTip.ToolTipText="{x:Static p:Resources.selfhealprotection_tooltipp}" MouseDown="ShowMessageBox" HorizontalAlignment="Center" VerticalAlignment="Center" Height="10" Margin="0,0,5,0"/>
                                                    </StackPanel>
                                                </Grid>
                                            </DockPanel>

                                            <Separator Opacity="0" Height="1"/>
                                            <DockPanel x:Name="SelfHealProtectionValueView">
                                                <Grid>
                                                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Left">
                                                        <Label Content="HP:" HorizontalAlignment="Center" VerticalAlignment="Top" Width="69" Height="22" Padding="0" FontSize="10" VerticalContentAlignment="Center" />
                                                        <ComboBox x:Name="SelfHealProtectionValueSelection" HorizontalAlignment="Left" VerticalAlignment="Center" Width="130" />
                                                    </StackPanel>
                                                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                                                        <svgc:SvgViewbox Source="/Resources/Questionmark.svg" uitools:ToolTip.ToolTipHeader="{x:Static p:Resources.selfhealprotection}" uitools:ToolTip.ToolTipText="{x:Static p:Resources.selfhealprotection_value_tooltip}" MouseDown="ShowMessageBox" HorizontalAlignment="Center" VerticalAlignment="Center" Height="10" Margin="0,0,5,0"/>
                                                    </StackPanel>
                                                </Grid>
                                            </DockPanel>

                                            <Separator Opacity="0" Height="1"/>
                                            <Separator Opacity="0.2" Height="1"/>
                                            <Separator Opacity="0" Height="1"/>

                                            <DockPanel>
                                                <Grid>
                                                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Left">
                                                        <Label Content="{x:Static p:Resources.mppotion}" HorizontalAlignment="Center" VerticalAlignment="Top" Width="69" Height="22" Padding="0" FontSize="10" VerticalContentAlignment="Center" />
                                                        <Button x:Name="MpPotActionButton" HorizontalAlignment="Left" Width="130" />
                                                    </StackPanel>
                                                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                                                        <svgc:SvgViewbox Source="/Resources/Questionmark.svg" uitools:ToolTip.ToolTipHeader="{x:Static p:Resources.mppotion}" uitools:ToolTip.ToolTipText="{x:Static p:Resources.mppotion_tooltip}" MouseDown="ShowMessageBox" Height="10" HorizontalAlignment="Right" VerticalAlignment="Center" Margin="0,0,5,0"/>
                                                    </StackPanel>
                                                </Grid>
                                            </DockPanel>
                                            <DockPanel x:Name="UseMPPotionView">
                                                <Grid>
                                                    <StackPanel>
                                                        <Label Content="{x:Static p:Resources.usemppotion}" Height="14" VerticalContentAlignment="Center" Padding="0" FontSize="10"/>
                                                        <Grid>
                                                            <StackPanel Orientation="Horizontal" HorizontalAlignment="Left">
                                                                <ComboBox x:Name="UseMPPotionValueSelection" VerticalAlignment="Center" Width="199" />
                                                            </StackPanel>
                                                            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                                                                <svgc:SvgViewbox Source="/Resources/Questionmark.svg" uitools:ToolTip.ToolTipHeader="{x:Static p:Resources.mppotion}" uitools:ToolTip.ToolTipText="{x:Static p:Resources.usemppotion_tooltip}" MouseDown="ShowMessageBox" Height="10" HorizontalAlignment="Right" VerticalAlignment="Center" Margin="0,0,5,0"/>
                                                            </StackPanel>
                                                        </Grid>
                                                    </StackPanel>
                                                </Grid>
                                            </DockPanel>

                                            <Separator Opacity="0" Height="2"/>
                                            <Separator Opacity="100" Height="1"/>
                                            <Separator Opacity="0" Height="2"/>



                                        </StackPanel>
                                    </GroupBox>

                                    <GroupBox Header="{x:Static p:Resources.selectedplayer}" Width="230">

                                        <StackPanel>
                                            <Separator Opacity="0" Height="1"/>
                                            <DockPanel>
                                                <StackPanel Orientation="Horizontal">
                                                    <Label Content="HP:" Width="34" Height="15" Padding="0" FontSize="10" VerticalContentAlignment="Center" />
                                                    <Grid Width="165" Height="15">
                                                        <ProgressBar Name="SelectedPlayerHPProgressBar" Value="0" SmallChange="1" Background="#FF131313" BorderBrush="Black" />
                                                        <TextBlock Text="{Binding ElementName=SelectedPlayerHPProgressBar, Path=Value, StringFormat={}{0:0}%}" HorizontalAlignment="Center" VerticalAlignment="Center" Foreground="White" />
                                                    </Grid>
                                                </StackPanel>
                                            </DockPanel>
                                            <Separator Opacity="0" Height="1"/>

                                            <DockPanel x:Name="MainDistanceView">
                                                <Grid>
                                                    <StackPanel Orientation="Vertical" >
                                                        <Label Content="{x:Static p:Resources.distance}" Height="14" VerticalContentAlignment="Center" Padding="0" FontSize="10" FontWeight="Bold"/>
                                                        <Button x:Name="MainDistanceStatus" Content="OK" HorizontalAlignment="Left" Foreground="White" Width="199"/>
                                                    </StackPanel>

                                                </Grid>
                                            </DockPanel>

                                            <DockPanel>
                                                <Grid>
                                                    <StackPanel>
                                                        <Label Content="{x:Static p:Resources.normalhealing}" Height="14" VerticalContentAlignment="Center" Padding="0" FontSize="10" FontWeight="Bold" Foreground="#FFFF9800" />
                                                        <Grid>
                                                            <StackPanel Orientation="Horizontal" HorizontalAlignment="Left">
                                                                <ComboBox x:Name="NormalHealingSelection" VerticalAlignment="Center" Width="199" />
                                                            </StackPanel>
                                                            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                                                                <svgc:SvgViewbox Source="/Resources/Questionmark.svg" uitools:ToolTip.ToolTipHeader="{x:Static p:Resources.healing}" uitools:ToolTip.ToolTipText="{x:Static p:Resources.normalhealing_tooltip}" MouseDown="ShowMessageBox" Height="10" HorizontalAlignment="Right" VerticalAlignment="Center" Margin="0,0,5,0"/>
                                                            </StackPanel>
                                                        </Grid>
                                                    </StackPanel>
                                                </Grid>
                                            </DockPanel>
                                            <DockPanel>
                                                <Grid>
                                                    <StackPanel>
                                                        <Label Content="{x:Static p:Resources.criticalhealing}" Height="14" VerticalContentAlignment="Center" Padding="0" FontSize="10" FontWeight="Bold" Foreground="#FFCC1E46" />
                                                        <Grid>
                                                            <StackPanel Orientation="Horizontal" HorizontalAlignment="Left">
                                                                <ComboBox x:Name="CriticalHealingSelection" VerticalAlignment="Center" Width="199" />
                                                            </StackPanel>
                                                            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                                                                <svgc:SvgViewbox Source="/Resources/Questionmark.svg" uitools:ToolTip.ToolTipHeader="{x:Static p:Resources.fppotion}" uitools:ToolTip.ToolTipText="{x:Static p:Resources.criticalhealing_tooltip}" MouseDown="ShowMessageBox" Height="10" HorizontalAlignment="Right" VerticalAlignment="Center" Margin="0,0,5,0"/>
                                                            </StackPanel>
                                                        </Grid>
                                                    </StackPanel>
                                                </Grid>
                                            </DockPanel>
                                            <Separator Opacity="0" Height="1"/>
                                        </StackPanel>

                                    </GroupBox>

                                    <GroupBox x:Name="GTAutoRebuffView" Header="{x:Static p:Resources.gtautorebuff}" Width="230">
                                        <StackPanel>
                                            <Separator Opacity="0" Height="1"/>
                                            <DockPanel>
                                                <StackPanel Orientation="Horizontal">
                                                    <Grid Width="218" Height="15" VerticalAlignment="Center">
                                                        <ProgressBar Name="GTAutoRebuffTimerProgressBar" Value="0" SmallChange="1" Foreground="#FF1791F7" Background="#FF131313" BorderBrush="Black" />
                                                        <TextBlock Text="{Binding ElementName=GTAutoRebuffTimerProgressBar, Path=Value, StringFormat={}{0:0}s}" HorizontalAlignment="Center" VerticalAlignment="Center" Foreground="White" />
                                                    </Grid>
                                                </StackPanel>
                                            </DockPanel>
                                            <Separator Opacity="0" Height="1"/>
                                            <DockPanel>
                                                <Button Style="{DynamicResource ButtonHoverStyle}" uitools:TextBlock.CharacterCasing="Upper" Content="{x:Static p:Resources.rebuffgt}" VerticalAlignment="Center" Height="25" Background="#FF1791F7" Foreground="White" Click="RebuffGTButtonClick" FontSize="10"/>
                                            </DockPanel>
                                            <Separator Opacity="0" Height="1"/>
                                        </StackPanel>
                                    </GroupBox>

                                    <GroupBox Header="{x:Static p:Resources.rebuff}" Width="230">

                                        <StackPanel>
                                            <Separator Opacity="0" Height="1"/>
                                            <DockPanel>
                                                <Grid>
                                                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Left">
                                                        <CheckBox x:Name="EmojiAutoRebuffDetectionCheckbox" Content="{x:Static p:Resources.motionrebuff}" HorizontalAlignment="Left" VerticalAlignment="Center" Width="150"/>
                                                    </StackPanel>
                                                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                                                        <svgc:SvgViewbox Source="/Resources/Questionmark.svg" uitools:ToolTip.ToolTipHeader="{x:Static p:Resources.motionrebuff}" uitools:ToolTip.ToolTipText="{x:Static p:Resources.motionrebuff_tooltip}" MouseDown="ShowMessageBox" HorizontalAlignment="Center" VerticalAlignment="Center" Height="10" Margin="0,0,5,0"/>
                                                    </StackPanel>
                                                </Grid>
                                            </DockPanel>

                                            <Separator Opacity="0" Height="1"/>

                                            <DockPanel x:Name="EmojiAutoRebuffView">
                                                <Grid>
                                                    <ComboBox xmlns:sys="clr-namespace:System;assembly=mscorlib" x:Name="EmojiAutoRebuffDetectionSelection" HorizontalContentAlignment="Center">
                                                        <ComboBox.Resources>
                                                            <sys:Double x:Key="{x:Static SystemParameters.VerticalScrollBarWidthKey}">0</sys:Double>
                                                        </ComboBox.Resources>
                                                        <ComboBox.ItemContainerStyle>
                                                            <Style TargetType="ComboBoxItem">
                                                                <Style.Triggers>
                                                                    <DataTrigger Binding="{Binding Visibility, RelativeSource={RelativeSource AncestorType=ComboBox}}" Value="Visible">
                                                                        <Setter Property="HorizontalContentAlignment" Value="Center"/>
                                                                    </DataTrigger>
                                                                </Style.Triggers>
                                                            </Style>
                                                        </ComboBox.ItemContainerStyle>
                                                        <ComboBox.ItemTemplate>
                                                            <DataTemplate>
                                                                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Center">
                                                                    <Image Height="30" RenderOptions.BitmapScalingMode="NearestNeighbor" Source="{ Binding ImageSource}"  ToolTip="{Binding Name}"></Image>
                                                                </StackPanel>
                                                            </DataTemplate>
                                                        </ComboBox.ItemTemplate>
                                                    </ComboBox>
                                                </Grid>
                                            </DockPanel>
                                            <Separator Opacity="0" Height="1"/>
                                            <DockPanel>
                                                <Button Style="{DynamicResource ButtonHoverStyle}" uitools:TextBlock.CharacterCasing="Upper" Content="{x:Static p:Resources.rebuff}" VerticalAlignment="Center" Height="25" Foreground="White" Background="#FFFDAA17" Click="RebuffButtonClick" FontSize="10">
                                                </Button>
                                            </DockPanel>
                                            <Separator Opacity="0" Height="1"/>
                                        </StackPanel>

                                    </GroupBox>
                                </StackPanel>
                            </ScrollViewer>

                            <StackPanel Grid.Row="2" Grid.Column="0" Orientation="Vertical" VerticalAlignment="Center" Margin="0,0,3,0">
                                <Separator Opacity="1" Height="1"/>
                                <Separator Opacity="0" Height="3"/>
                                <DockPanel>
                                    <Grid>
                                        <StackPanel>

                                            <DockPanel>
                                                <StackPanel Height="30">
                                                    <Button Style="{DynamicResource ButtonHoverStyle}" uitools:TextBlock.CharacterCasing="Upper" Height="30" Background="#FF5865F2" Foreground="White" Content="{x:Static p:Resources.joindiscord}" Click="JoinDiscordButton_Click" FontSize="10">
                                                    </Button>
                                                </StackPanel>
                                            </DockPanel>
                                            <Separator Opacity="0" Height="3"/>
                                            <DockPanel x:Name="donateView">
                                                <StackPanel Height="50">
                                                    <Button Style="{DynamicResource ButtonHoverStyle}" Height="50" uitools:TextBlock.CharacterCasing="Upper" Background="#FFFFD140" Foreground="#FF003087" Content="{x:Static p:Resources.donate}" Click="Donate_Click" FontSize="18" FontWeight="Bold"/>
                                                </StackPanel>
                                            </DockPanel>
                                            <Separator Opacity="0" Height="3"/>
                                            <Button Style="{DynamicResource ButtonHoverStyle}" x:Name="StartStopButton" Content="" Height="60" Click="StartStopButton_Click" />
                                            <Label x:Name="VersionsLabel" Height="14" VerticalContentAlignment="Center" Padding="0" FontSize="10" Foreground="#FF7B7B7B" />
                                        </StackPanel>
                                    </Grid>
                                </DockPanel>
                            </StackPanel>
                        </Grid>

                    </TabItem>

                    <TabItem Header="{x:Static p:Resources.globalhotkeys}" MinHeight="80">
                        <Grid Background="#FFE5E5E5">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>

                            <Grid.RowDefinitions>
                                <RowDefinition Height="*"/>
                            </Grid.RowDefinitions>
                            <ScrollViewer Grid.Row="0" Grid.Column="0" VerticalAlignment="Top" VerticalScrollBarVisibility="Auto">
                                <ScrollViewer.Resources>
                                    <sys:Double x:Key="{x:Static SystemParameters.VerticalScrollBarWidthKey}">5</sys:Double>
                                </ScrollViewer.Resources>
                                <StackPanel >
                                    <Separator Opacity="0" Height="1"/>
                                    <StackPanel>
                                        <Grid>
                                            <svgc:SvgViewbox Source="/Resources/Questionmark.svg" uitools:ToolTip.ToolTipHeader="{x:Static p:Resources.mirror}" uitools:ToolTip.ToolTipText="{x:Static p:Resources.mirror_tooltip}" MouseDown="ShowMessageBox" Height="10" HorizontalAlignment="Right" VerticalAlignment="Center" Margin="0 0 5 0"/>
                                        </Grid>
                                    </StackPanel>
                                    <GroupBox Header="{x:Static p:Resources.bot}" Width="230">
                                        <StackPanel>
                                            <DockPanel>
                                                <Grid>
                                                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Left">
                                                        <Label Content="{x:Static p:Resources.rebuff}" ContentStringFormat=" {0}:" VerticalContentAlignment="Center" Width="100" Height="22" Padding="0" FontSize="10" />
                                                        <Button  x:Name="GlobalSkillRebuffActionButton" Width="110"/>
                                                    </StackPanel>
                                                </Grid>

                                            </DockPanel>
                                            <Separator Opacity="0" Height="1"/>
                                            <DockPanel>
                                                <Grid>
                                                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Left">
                                                        <Label Content="Geburah Tiphreth" ContentStringFormat=" {0}:" VerticalContentAlignment="Center" Width="100" Height="22" Padding="0" FontSize="10" />
                                                        <Button  x:Name="GlobalSkillGeburahTiphrethActionButton" Width="110"/>
                                                    </StackPanel>
                                                </Grid>
                                            </DockPanel>

                                            <Separator Opacity="0" Height="1"/>
                                            <DockPanel>
                                                <Grid>
                                                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Left">
                                                        <Label Content="Holy Guard" ContentStringFormat=" {0}:" VerticalContentAlignment="Center" Width="100" Height="22" Padding="0" FontSize="10" />
                                                        <Button  x:Name="GlobalSkillHolyGuardActionButton" Width="110"/>
                                                    </StackPanel>
                                                </Grid>
                                            </DockPanel>
                                        </StackPanel>
                                    </GroupBox>

                                    <GroupBox Header="{x:Static p:Resources.custom}" Width="230">
                                        <StackPanel>
                                            <Separator Opacity="0" Height="1"/>
                                            <DockPanel>
                                                <Button uitools:TextBlock.CharacterCasing="Upper" Content="{x:Static p:Resources.addcustomhotkey}" VerticalAlignment="Center" Height="25" Background="#FF1791F7" Foreground="White" FontSize="10" Click="AddGlobalHotkeyClick"/>
                                            </DockPanel>
                                            <Separator Opacity="0" Height="5"/>
                                            <StackPanel x:Name="CustomHotkeysScrollerContent">

                                            </StackPanel>
                                        </StackPanel>
                                    </GroupBox>

                                </StackPanel>
                            </ScrollViewer>
                        </Grid>
                    </TabItem>

                    <TabItem Header="{x:Static p:Resources.skills}" MinHeight="80">
                        <Grid Background="#FFE5E5E5">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>

                            <Grid.RowDefinitions>
                                <RowDefinition Height="*"/>
                            </Grid.RowDefinitions>
                            <ScrollViewer Grid.Row="0" Grid.Column="0" VerticalAlignment="Top" VerticalScrollBarVisibility="Auto">
                                <ScrollViewer.Resources>
                                    <sys:Double x:Key="{x:Static SystemParameters.VerticalScrollBarWidthKey}">5</sys:Double>
                                </ScrollViewer.Resources>
                                <StackPanel Grid.RowSpan="2" >
                                    <GroupBox Header="{x:Static p:Resources.skills}" Width="230">

                                        <StackPanel>

                                            <DockPanel>
                                                <Grid>
                                                    <StackPanel>
                                                        <Label Content="{x:Static p:Resources.heal_healrain}" Height="14" VerticalContentAlignment="Center" Padding="0" FontSize="10"/>
                                                        <Grid>
                                                            <StackPanel Orientation="Horizontal" HorizontalAlignment="Left">
                                                                <ComboBox x:Name="HealVariantButtonSelection" VerticalAlignment="Center" Width="199" />
                                                            </StackPanel>
                                                            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                                                                <svgc:SvgViewbox Source="/Resources/Questionmark.svg" uitools:ToolTip.ToolTipHeader="{x:Static p:Resources.heal_healrain}" uitools:ToolTip.ToolTipText="{x:Static p:Resources.heal_healrain_tooltip}" MouseDown="ShowMessageBox" Height="10" HorizontalAlignment="Right" VerticalAlignment="Center" Margin="0,0,5,0"/>
                                                            </StackPanel>
                                                        </Grid>
                                                    </StackPanel>
                                                </Grid>
                                            </DockPanel>
                                            <Separator Opacity="0" Height="1"/>

                                            <DockPanel x:Name="HealVariantSelectionView_Heal">
                                                <Grid>
                                                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Left">
                                                        <Label Content="Heal:" VerticalContentAlignment="Center" Width="100" Height="22" Padding="0" FontSize="10" />
                                                        <Button  x:Name="HealActionButton" Width="110"/>
                                                    </StackPanel>
                                                </Grid>
                                            </DockPanel>


                                            <DockPanel x:Name="HealVariantSelectionView_HealRain">
                                                <Grid>
                                                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Left">
