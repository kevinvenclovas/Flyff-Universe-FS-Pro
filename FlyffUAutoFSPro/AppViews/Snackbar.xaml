<UserControl x:Class="FlyffUAutoFSPro.AppViews.Snackbar"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:FlyffUAutoFSPro.AppViews"
             mc:Ignorable="d">
    <Grid>
        <Grid IsEnabled="False" Margin="0,0,0,5">
            <Border  BorderBrush="Black" BorderThickness="2">
                <Border.Effect>
                    <BlurEffect Radius="5"/>
                </Border.Effect>
            </Border>
            <DockPanel Background="#E5FF0000" Height="25" VerticalAlignment="Center">
                <Label Name="InfoText" HorizontalAlignment="Center" Content="" Foreground="Black"/>
            </DockPanel>
        </Grid>
    </Grid>
</UserControl>
